<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cvinput"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ui.activities.CVInput">

    <!--yeah, there must not be layout in layout but idc-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/full_name"/>

            <LinearLayout
                android:id="@+id/experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/experience"/>
            </LinearLayout>


            <Button
                android:id="@+id/create_experience"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_line"/>

            <LinearLayout
                android:id="@+id/education"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/education"
                    />
            </LinearLayout>

            <Button
                android:id="@+id/create_education"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_line"/>


            <LinearLayout
                android:id="@+id/project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/personal_projects"/>
            </LinearLayout>

            <Button
                android:id="@+id/create_project"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_line"/>

            <TextView
                android:id="@+id/primary_skill_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/primary_skills"
                android:textSize="17dp"/>

            <LinearLayout
                android:id="@+id/primary_skill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/skill"/>
            </LinearLayout>

            <Button
                android:id="@+id/create_primary_skill"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_line"/>

            <TextView
                android:id="@+id/secondary_skill_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/secondary_skills"
                android:textSize="17dp"/>

            <LinearLayout
                android:id="@+id/secondary_skill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/skill"/>
            </LinearLayout>

            <Button
                android:id="@+id/create_secondary_skill"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_line"/>

            <TextView
                android:id="@+id/other_skill_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/other_skills"
                android:textSize="17dp"/>


            <LinearLayout
                android:id="@+id/other_skill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/skill"/>
            </LinearLayout>

            <Button
                android:id="@+id/create_other_skill"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_line"/>

            <LinearLayout
                android:id="@+id/link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/link"/>
            </LinearLayout>


            <Button
                android:id="@+id/create_link"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_line"/>

            <EditText
                android:id="@+id/about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/about"/>

            <Button
                android:id="@+id/create_cv"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_cv"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
